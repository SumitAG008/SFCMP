<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">
    <Dialog id="workflowStepEditDialog" title="Edit Workflow Step" contentWidth="500px">
        <content>
            <layout:SimpleForm layout="ResponsiveGridLayout" editable="true" class="sapUiSmallMargin">
                <layout:content>
                    <Label text="Step Name" required="true"/>
                    <Input id="editStepNameInput" value="{workflowStepEdit>/stepName}" placeholder="Enter step name"/>
                    <Label text="Assignee Role" required="true"/>
                    <Input id="editAssigneeRoleInput" value="{workflowStepEdit>/assigneeRole}" placeholder="e.g., Manager, HR, Finance"/>
                    <Label text="Icon"/>
                    <Select id="editStepIconSelect" selectedKey="{workflowStepEdit>/icon}">
                        <core:Item key="sap-icon://initiative" text="Initiative"/>
                        <core:Item key="sap-icon://manager" text="Manager"/>
                        <core:Item key="sap-icon://employee" text="Employee"/>
                        <core:Item key="sap-icon://money-bills" text="Finance"/>
                        <core:Item key="sap-icon://approvals" text="Approval"/>
                        <core:Item key="sap-icon://accept" text="Completed"/>
                        <core:Item key="sap-icon://review" text="Review"/>
                    </Select>
                    <Label text="Initial Status"/>
                    <Select id="editStepStatusSelect" selectedKey="{workflowStepEdit>/status}">
                        <core:Item key="Pending" text="Pending"/>
                        <core:Item key="In Progress" text="In Progress"/>
                        <core:Item key="Completed" text="Completed"/>
                    </Select>
                    <Label text="Description"/>
                    <TextArea id="editStepDescInput" value="{workflowStepEdit>/description}" rows="3" placeholder="Enter step description"/>
                </layout:content>
            </layout:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" type="Emphasized" press="onSaveWorkflowStepEdit"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseWorkflowStepEditDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
